        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.hidden_field :item_id, value: @item.id %>
  <div>
    <div>
      <%= form.collection_select(:property_id, all_properties, :id, :name, { prompt: "Seleziona una Property" }, class: "form-control") %>

    </div>

